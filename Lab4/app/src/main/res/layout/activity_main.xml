<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#EAF4FF">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile Picture Updater"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose an option below."
        android:textSize="14sp"
        android:paddingBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <android.widget.Button
            android:id="@+id/btnCamera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Take Photo"
            android:textColor="#0B1B3A"
            android:textStyle="bold"
            android:background="@drawable/btn_blue_white"
            android:elevation="4dp"
            android:stateListAnimator="@null" />
        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <android.widget.Button
            android:id="@+id/btnGallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select from Gallery"
            android:textColor="#0B1B3A"
            android:textStyle="bold"
            android:background="@drawable/btn_blue_white"
            android:elevation="4dp"
            android:stateListAnimator="@null" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivPreview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="14dp"
        android:scaleType="fitCenter"
        android:contentDescription="Selected image preview"
        android:background="@drawable/card_white"
        android:padding="12dp"
        android:clipToOutline="true"
        />

</LinearLayout>
